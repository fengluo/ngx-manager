# Virtual Host: {{ vhost.name }}
# Generated at: {{ generation_time }}
# Domains: {{ vhost.domains | join(', ') }}

{% if vhost.ssl %}
# HTTP to HTTPS redirect
server {
    listen 80;
    listen [::]:80;
    server_name {{ vhost.domains | join(' ') }};
    
    # ACME challenge
    location /.well-known/acme-challenge/ {
        root /var/www/html;
        try_files $uri =404;
    }
    
    # Redirect to HTTPS
    location / {
        return 301 https://$server_name$request_uri;
    }
}

# HTTPS server
server {
    listen 443 ssl;
    listen [::]:443 ssl;
    http2 on;
    server_name {{ vhost.domains | join(' ') }};
    
    # SSL configuration
    ssl_certificate /app/certs/{{ vhost.domains[0] }}/fullchain.cer;
    ssl_certificate_key /app/certs/{{ vhost.domains[0] }}/{{ vhost.domains[0] }}.key;
    
    # SSL security settings
    ssl_session_timeout 1d;
    ssl_session_cache shared:SSL_{{ vhost.name | replace('-', '_') }}:10m;
    ssl_session_tickets off;
    
    # HSTS
    add_header Strict-Transport-Security "max-age=63072000" always;
    
{% else %}
# HTTP server
server {
    listen 80;
    listen [::]:80;
    server_name {{ vhost.domains | join(' ') }};
    
{% endif %}
    # Logging
    access_log /app/logs/{{ vhost.name }}-access.log main;
    error_log /app/logs/{{ vhost.name }}-error.log;
    
    # Security headers
    add_header X-Frame-Options DENY;
    add_header X-Content-Type-Options nosniff;
    add_header X-XSS-Protection "1; mode=block";
    add_header Referrer-Policy "strict-origin-when-cross-origin";
    
{% if vhost.auth_basic %}
    # Basic authentication
    auth_basic "Restricted Access";
    auth_basic_user_file {{ vhost.auth_basic_user_file | default('/etc/nginx/.htpasswd') }};
    
{% endif %}
{% if vhost.locations %}
    # Location-based configuration
{% for location in vhost.locations %}
    location {{ location.path }} {
{% if location.auth_basic %}
        # Basic authentication for this location
        auth_basic "Restricted Access";
        auth_basic_user_file {{ location.auth_basic_user_file | default('/etc/nginx/.htpasswd') }};
        
{% endif %}
{% if location.type == 'proxy' %}
        # Proxy configuration
        proxy_pass {{ location.upstream }}{% if location.proxy_pass_path %}{{ location.proxy_pass_path }}{% endif %};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Timeouts
        proxy_connect_timeout {{ location.proxy_connect_timeout | default('5s') }};
        proxy_send_timeout {{ location.proxy_send_timeout | default('30s') }};
        proxy_read_timeout {{ location.proxy_read_timeout | default('30s') }};
        
        # Buffer settings
        proxy_buffering on;
        proxy_buffer_size 4k;
        proxy_buffers 8 4k;
        
{% if location.websocket %}
        # WebSocket support
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
{% endif %}
{% if location.client_max_body_size %}
        # Upload size limit
        client_max_body_size {{ location.client_max_body_size }};
        
{% endif %}
{% elif location.type == 'static' %}
        # Static file configuration
        root {{ location.root }};
{% if location.try_files %}
        try_files {{ location.try_files }};
{% endif %}
        
        # Cache settings
{% if location.expires %}
        expires {{ location.expires }};
        add_header Cache-Control "public, immutable";
{% endif %}
        
{% if location.autoindex %}
        # Directory listing
        autoindex on;
        autoindex_exact_size off;
        autoindex_localtime on;
        
{% endif %}
        # Security
        location ~* \.(php|jsp|asp|aspx|cgi)$ {
            deny all;
        }
        
{% endif %}
{% if location.custom_config %}
        # Custom configuration
{{ location.custom_config | indent(8, true) }}
        
{% endif %}
    }
    
{% endfor %}
{% else %}
    # Simple configuration
{% if vhost.type == 'proxy' %}
    location / {
        # Proxy configuration
        proxy_pass {{ vhost.upstream }};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Timeouts
        proxy_connect_timeout 5s;
        proxy_send_timeout 30s;
        proxy_read_timeout 30s;
        
        # Buffer settings
        proxy_buffering on;
        proxy_buffer_size 4k;
        proxy_buffers 8 4k;
    }
    
{% elif vhost.type == 'static' %}
    location / {
        # Static file configuration
        root {{ vhost.root }};
        index index.html index.htm;
        try_files $uri $uri/ =404;
        
        # Cache settings
        expires 1d;
        add_header Cache-Control "public";
        
        # Security
        location ~* \.(php|jsp|asp|aspx|cgi)$ {
            deny all;
        }
    }
    
{% endif %}
{% endif %}
{% if vhost.custom_config %}
    # Custom server configuration
{{ vhost.custom_config | indent(4, true) }}
    
{% endif %}
} 