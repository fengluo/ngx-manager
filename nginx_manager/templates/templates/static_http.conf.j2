# {{ domain }} - HTTP Static Configuration
server {
    listen 80;
    server_name {{ domain }};

    # Document root
    root /var/www/{{ domain }};
    index index.html index.htm;

    # Static files
    location / {
        try_files $uri $uri/ =404;
    }

    # Let's Encrypt challenge
    location /.well-known/acme-challenge/ {
        root /var/www/html;
    }

    # Logging
    access_log {{ access_log }};
    error_log {{ error_log }};
} 